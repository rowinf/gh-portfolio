{
  "name": "rowinf.github.io",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.1.1",
    "@parcel/transformer-sass": "^2.0.1",
    "autoprefixer": "^10.4.0",
    "axios": "^0.24.0",
    "bootstrap": "^5.1.3",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.3",
    "html-minifier": "^4.0.0",
    "luxon": "^1.26.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.1",
    "purgecss": "^4.0.3",
    "rimraf": "^3.0.2",
    "scss": "^0.2.4",
    "stylus": "^0.54.8"
  },
  "scripts": {
    "build:stylus": "stylus --compress ./src/_assets/stylus/ --out ./_site/_assets/css/",
    "watch:stylus": "stylus --watch ./src/stylus/ --out ./_site/_assets/css/",
    "build:11ty": "eleventy",
    "watch:11ty": "eleventy --serve",
    "clean": "rimraf _site/ .parcel-cache/",
    "build": "cross-env NODE_ENV=production npm-run-all clean --parallel build:* --serial purgecss",
    "dev": "concurrently -n parcel,11ty \"npm run watch:parcel\" \"npm run watch:11ty\"",
    "purgecss": "purgecss -c ./purgecss.config.js",
    "watch:parcel": "parcel watch parcel.js --dist-dir ./_site/_assets --public-url '/_assets'",
    "build:parcel": "parcel build parcel.js --dist-dir ./_site/_assets --public-url '/_assets' --no-source-maps"
  }
}
